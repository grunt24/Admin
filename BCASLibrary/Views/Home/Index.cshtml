<div>
    @using (Html.BeginForm("Index", "Home", FormMethod.Get)){
        <table>
            <tr>
                <td>
                    <span><b>Search By:</b></span>
                    @Html.RadioButton("searchBy", "GenreName", true)
                    <text>Genre Name</text>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.TextBox("searchValue", null, new{Class = "form-control", placeholder="Enter Genre Name"})
                </td>
                <td>
                    <input type="submit" value="Search" class="btn btn-success"/>
                </td>
            </tr>
        </table>
    }
</div>

<br />

<div class="container">
    <div class="row g-5">
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-md-6 col-lg-4">
                <div class="card">
                    <div class="row g-0 shadow">
                        <div class="col-6 col-md-5">
                            <a asp-action="Details" asp-route-id="@item.Id">
                                <img src="@item.ImageUrl" class="card-img img-fluid rounded-start w-100"
                                 style="object-fit:cover;
                                    border-bottom-right-radius: 0px;
                                    border-top-right-radius: 0px;">
                            </a>
                        </div>
                        <div class="col-6 col-md-7">
                            <div class="card-body d-flex flex-column justify-content-center h-100">
                                <div class="h-auto">
                                    <h6 class="card-title fw-bold">@item.Title</h6>
                                    <p>@item.Author</p>
                                    <p>@item.Genre.GenreName</p>
                                    <p class="text-warning" style="cursor: pointer;">
                                        <i class="bi bi-star-fill"></i>
                                        <i class="bi bi-star-fill"></i>
                                        <i class="bi bi-star-fill"></i>
                                        <i class="bi bi-star-fill"></i>
                                        <i class="bi bi-star-half"></i>
                                    </p>
                                </div>
                                <div>
                                    <div>
                                        <a class="" asp-action="Details" asp-route-id="@item.Id">
                                            Read More
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
